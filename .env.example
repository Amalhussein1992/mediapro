APP_NAME="Media Pro"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==========================================
# Database Configuration
# ==========================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=socialmedia_manager
DB_USERNAME=root
DB_PASSWORD=

# ==========================================
# Session & Cache
# ==========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# ==========================================
# Redis (Optional - for better performance)
# ==========================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MEMCACHED_HOST=127.0.0.1

# ==========================================
# Mail Configuration
# ==========================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==========================================
# OAuth Login Providers (Google & Apple)
# ==========================================

# Google OAuth (for user login)
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Apple OAuth (for user login)
# Get from: https://developer.apple.com/
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
APPLE_REDIRECT_URI=http://localhost:8000/auth/apple/callback
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# ==========================================
# Social Media Platform APIs
# ==========================================

# Facebook & Instagram (use same app)
# Get from: https://developers.facebook.com/
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI=http://localhost:8000/oauth/facebook/callback

INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
INSTAGRAM_REDIRECT_URI=http://localhost:8000/oauth/instagram/callback

# Twitter/X
# Get from: https://developer.twitter.com/
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=http://localhost:8000/oauth/twitter/callback

# LinkedIn
# Get from: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=http://localhost:8000/oauth/linkedin/callback

# TikTok
# Get from: https://developers.tiktok.com/
TIKTOK_CLIENT_ID=
TIKTOK_CLIENT_SECRET=
TIKTOK_REDIRECT_URI=http://localhost:8000/oauth/tiktok/callback

# YouTube (Google)
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REDIRECT_URI=http://localhost:8000/oauth/youtube/callback

# Pinterest
# Get from: https://developers.pinterest.com/
PINTEREST_CLIENT_ID=
PINTEREST_CLIENT_SECRET=
PINTEREST_REDIRECT_URI=http://localhost:8000/oauth/pinterest/callback

# ==========================================
# AI Services Configuration
# ==========================================

# OpenAI API (GPT-4o-mini, Whisper, DALL-E)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000

# Google Gemini API (Gemini 1.5 Flash)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Anthropic Claude API (Claude 3.5 Sonnet)
# Get from: https://console.anthropic.com/settings/keys
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096

# AI Service Settings
DEFAULT_AI_PROVIDER=openai
AI_FALLBACK_ENABLED=true
AI_RATE_LIMIT_RETRY=true

# Whisper (Audio to Text)
WHISPER_API_KEY=${OPENAI_API_KEY}
WHISPER_MODEL=whisper-1

# ==========================================
# Payment Services
# ==========================================

# Stripe
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# PayPal
# Get from: https://developer.paypal.com/
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# ==========================================
# AWS Services (for file storage)
# ==========================================
# Get from: https://console.aws.amazon.com/
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==========================================
# Frontend (Vite)
# ==========================================
VITE_APP_NAME="${APP_NAME}"
