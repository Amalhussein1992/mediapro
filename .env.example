APP_NAME="Media Pro"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://mediapro.social

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=socialmedia_manager
DB_USERNAME=root
DB_PASSWORD=

GEMINI_API_KEY=your_key_here
OPENAI_API_KEY=your_key_here
CLAUDE_API_KEY=your_key_here

# ===========================================
# PAYMENT PROVIDERS
# ===========================================

# Stripe Payment Gateway
STRIPE_KEY=pk_live_your_publishable_key_here
STRIPE_SECRET=sk_live_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===========================================
# SOCIAL MEDIA OAUTH CREDENTIALS
# ===========================================

# Facebook & Instagram
# Get from: https://developers.facebook.com/
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=https://www.mediapro.social/api/social-oauth/callback

# Twitter/X
# Get from: https://developer.twitter.com/
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_REDIRECT_URI=https://www.mediapro.social/api/social-oauth/callback

# LinkedIn
# Get from: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=https://www.mediapro.social/api/social-oauth/callback

# TikTok
# Get from: https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=https://www.mediapro.social/api/social-oauth/callback
