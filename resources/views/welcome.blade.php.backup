    <!-- JavaScript for Language Switching -->
    <script>
        // Initialize language from localStorage or default to English
        const savedLang = localStorage.getItem('language') || 'en';

        function switchLang(lang) {
            // Store preference
            localStorage.setItem('language', lang);

            // Update HTML attributes
            const html = document.documentElement;
            html.setAttribute('lang', lang);
            html.setAttribute('dir', lang === 'ar' ? 'rtl' : 'ltr');

            // Show/hide content
            if (lang === 'en') {
                document.querySelectorAll('.content-en').forEach(el => el.style.display = '');
                document.querySelectorAll('.content-ar').forEach(el => el.style.display = 'none');

                // Update button styles
                const btnEn = document.getElementById('btn-en');
                const btnAr = document.getElementById('btn-ar');

                btnEn.className = 'px-3 md:px-4 py-1.5 md:py-2 rounded-lg text-xs md:text-sm font-semibold bg-gradient-to-r from-blue-600 to-purple-600 text-white transition-all duration-300';
                btnAr.className = 'px-3 md:px-4 py-1.5 md:py-2 rounded-lg text-xs md:text-sm font-semibold text-gray-400 hover:text-white transition-all duration-300';
            } else {
                document.querySelectorAll('.content-en').forEach(el => el.style.display = 'none');
                document.querySelectorAll('.content-ar').forEach(el => el.style.display = '');

                // Update button styles
                const btnEn = document.getElementById('btn-en');
                const btnAr = document.getElementById('btn-ar');

                btnAr.className = 'px-3 md:px-4 py-1.5 md:py-2 rounded-lg text-xs md:text-sm font-semibold bg-gradient-to-r from-blue-600 to-purple-600 text-white transition-all duration-300';
                btnEn.className = 'px-3 md:px-4 py-1.5 md:py-2 rounded-lg text-xs md:text-sm font-semibold text-gray-400 hover:text-white transition-all duration-300';
            }
        }

        // Apply saved language on page load
        document.addEventListener('DOMContentLoaded', function() {
            switchLang(savedLang);
        });

        // Navbar scroll effect
        const navbar = document.getElementById('navbar');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 100) {
                navbar.style.background = 'rgba(10, 15, 30, 0.95)';
                navbar.style.backdropFilter = 'blur(20px)';
                navbar.style.boxShadow = '0 10px 40px rgba(0, 0, 0, 0.3)';
            } else {
                navbar.style.background = 'transparent';
                navbar.style.backdropFilter = 'none';
                navbar.style.boxShadow = 'none';
            }
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
