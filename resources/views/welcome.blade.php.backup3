    <!-- JavaScript for Language Switching -->
    <script>
        // Initialize language from localStorage or default to English
        const savedLang = localStorage.getItem('language') || 'en';

        function switchLang(lang) {
            // Store preference
            localStorage.setItem('language', lang);

            // Update HTML attributes
            const html = document.documentElement;
            html.setAttribute('lang', lang);
            html.setAttribute('dir', lang === 'ar' ? 'rtl' : 'ltr');

            // Show/hide content
            if (lang === 'en') {
                document.querySelectorAll('.content-en').forEach(el => el.style.display = '');
                document.querySelectorAll('.content-ar').forEach(el => el.style.display = 'none');

                // Update button styles
                document.getElementById('btn-en').classList.add('bg-blue-600', 'text-white');
                document.getElementById('btn-en').classList.remove('text-gray-600');
                document.getElementById('btn-ar').classList.remove('bg-blue-600', 'text-white');
                document.getElementById('btn-ar').classList.add('text-gray-600');
            } else {
                document.querySelectorAll('.content-en').forEach(el => el.style.display = 'none');
                document.querySelectorAll('.content-ar').forEach(el => el.style.display = '');

                // Update button styles
                document.getElementById('btn-ar').classList.add('bg-blue-600', 'text-white');
                document.getElementById('btn-ar').classList.remove('text-gray-600');
                document.getElementById('btn-en').classList.remove('bg-blue-600', 'text-white');
                document.getElementById('btn-en').classList.add('text-gray-600');
            }
        }

        // Apply saved language on page load
        document.addEventListener('DOMContentLoaded', function() {
            switchLang(savedLang);
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
